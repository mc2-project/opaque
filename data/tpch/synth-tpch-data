#!/bin/bash

set -eu

cd "$(dirname $0)"

rm -rf tpch-dbgen
git clone https://github.com/electrum/tpch-dbgen
cd tpch-dbgen
make -j$(nproc)

# Create ~0.01GB files
./dbgen -vf -s 0.01
mkdir -p $OPAQUE_DATA_DIR/tpch/sf_001
chmod u+r *.tbl
cp *.tbl $OPAQUE_DATA_DIR/tpch/sf_001

# Create ~0.1GB files
./dbgen -vf -s 0.1
mkdir -p $OPAQUE_DATA_DIR/tpch/sf_01
chmod u+r *.tbl
cp *.tbl $OPAQUE_DATA_DIR/tpch/sf_01

# Create ~1GB files
./dbgen -vf -s 1.0
mkdir -p $OPAQUE_DATA_DIR/tpch/sf_1
chmod u+r *.tbl
cp *.tbl $OPAQUE_DATA_DIR/tpch/sf_1
